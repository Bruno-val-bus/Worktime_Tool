# .kv file of the start_menu.py code

# Declare the class we will be adding widgets to.
<StartMenuGrid>:
    cols:2
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            size_hint: 0.05, 0.05
            Button:
                id: add_todo_button
                text:"Add TODO"
                on_press: root.add2selected_node()
            TextInput:
                id: todo_input
                multinline:False
        GridLayout:
            cols:1
            size_hint: 0.05, 0.05
            Button:
                id: remove_todo_button
                text:"Remove TODO"
                on_press: root.remove_selected_node()
        TreeView:
            id: todo_tree
            #size_hint: 2.5, 2.5
            pos_hint: {'center_x': .5, 'center_y': .5}
    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: "Task: "
            TextInput:
                id: task_input
                multinline:False
                disabled: True
            Label:
                text: "Subtask: "
            TextInput:
                id: subtask_input
                multiline:False
                disabled: True

        Button:
            id: start_timer_button
            text:"Start timer"
            on_press: root.start_timer_btn(stop_timer_button, start_timer_button, time_task_button, task_input, subtask_input, print_time_button) # or app.start_timer_btn()
        Button:
            id: add_todo2task_button
            text:"Add TODO to task"
            disabled: True
            on_press: root.add_todo2task()
        Button:
            id: stop_timer_button
            text:"Stop timer"
            disabled: True
            on_press: root.stop_timer_btn(start_timer_button, stop_timer_button, time_task_button, task_input, subtask_input, print_time_button)
        Button:
            id: time_task_button
            text:"Save task time"
            disabled: True
            on_press: root.time_task_btn(task_input, subtask_input)
        Button:
            id: print_time_button
            text:"Print time"
            disabled: True
            on_press: root.print_time()

